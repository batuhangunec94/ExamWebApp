@model LessonDTO
@{
    ViewData["Title"] = "AddLesson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form name="form" asp-controller="Admin" asp-action="AddLesson" method="post">
        <div class="row">
            <h2 style="width:100%;text-align:center;">@TempData["message"]</h2>
            <div class="col-md-8">
                <div class="form-group row">
                    <label asp-for="LessonName" class="col-md-2 col-form-label">Ders Adı</label>
                    <div class="col-md-10">
                        <input asp-for="LessonName" class="form-control" />
                        <span asp-validation-for="LessonName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StartingDate" class="col-md-2 col-form-label">Başlangıç Tarihi</label>
                    <div class="col-md-10">
                        <input type="datetime-local" asp-for="StartingDate" class="form-control">
                        <span asp-validation-for="StartingDate"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EndDate" class="col-md-2 col-form-label">Bitiş Tarihi</label>
                    <div class="col-md-10">
                        <input type="datetime-local" asp-for="EndDate"  class="form-control">
                        <span asp-validation-for="EndDate"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-md-2 col-form-label">Fiyat</label>
                    <div class="col-md-10">
                        <input asp-for="Price" onkeypress="if ( isNaN( String.fromCharCode(event.keyCode) )) return false;" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

